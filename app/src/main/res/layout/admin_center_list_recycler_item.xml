<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/adminCarView"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/card_item_name"
                android:layout_width="231dp"
                android:layout_height="36dp"
                android:layout_margin="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="5dp"
                android:text="Title"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_item_row1_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintStart_toStartOf="@+id/card_item_name"
                app:layout_constraintTop_toBottomOf="@id/card_item_name"
                tools:text="Marked Date : 2022/08/21" />

            <TextView
                android:id="@+id/card_item_row2_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="@+id/card_item_row1_center"
                app:layout_constraintStart_toStartOf="@+id/card_item_row1_center"
                app:layout_constraintTop_toBottomOf="@+id/card_item_row1_center"
                tools:text="Marked Date : 2022/08/21" />

            <TextView
                android:id="@+id/card_item_row3_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="@+id/card_item_row2_center"
                app:layout_constraintStart_toStartOf="@+id/card_item_row2_center"
                app:layout_constraintTop_toBottomOf="@+id/card_item_row2_center"
                tools:text="Marked Date : 2022/08/21" />

            <ImageView
                android:id="@+id/admin_center_deleteBin"
                android:layout_width="37dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.895"
                app:layout_constraintStart_toEndOf="@+id/card_item_row2_center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.493"
                app:srcCompat="@drawable/ic_admin_center_list_bin" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
