<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_detected_patient"
    tools:context=".center.ui.vaccination.VaccinationFragment">

    <Button
        android:id="@+id/finishbtn"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="496dp"
        android:background="@drawable/ic_citizen_button_finish"
        android:foreground="@drawable/ic_citizen_button_finish"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textbatchId"
        android:layout_width="284dp"
        android:layout_height="31dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/ic_input"
        android:hint="Batch ID"
        android:ems="10"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textvaccinename"
        android:layout_width="285dp"
        android:layout_height="34dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/ic_input"
        android:hint="Vaccine Name"
        android:ems="10"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:textColor="#070707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="47dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/yantramanav_bold"
        android:text="Detected Patient"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="56dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/yantramanav_bold"
        android:text="Vaccination"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/ic_vaccine_edit"
        android:foreground="@drawable/ic_vaccine_edit"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/ic_vaccine_delete"
        android:foreground="@drawable/ic_vaccine_delete"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rejectbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="496dp"
        android:background="@drawable/ic_reject_button"
        android:foreground="@drawable/ic_reject_button"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>